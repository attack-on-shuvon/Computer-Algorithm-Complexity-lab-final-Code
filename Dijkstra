#include<bits/stdc++.h>
using namespace std;
vector<pair<int,int>>adj[1000];
int cost[1000];
priority_queue<pair<int,int>,vector<pair<int,int>>,greater<pair<int,int>>>pq;
int par[1000];

void dijkstra(int s){
    for(int i=0;i<1000;i++){
        cost[i]=INT_MAX;
    }
    cost[s]=0;
    par[s]=s;
    pq.push({cost[s],s});

    while(!pq.empty()){
        int u=pq.top().second;
        pq.pop();

        int v,weight;
        for(int i=0;i<adj[u].size();i++){
            v=adj[u][i].first;
            weight=adj[u][i].second;

            if(cost[u]+weight<cost[v]){
                cost[v]=cost[u]+weight;
                par[v]=u;
                pq.push({cost[v],v});
            }
        }
    }


}
int main(){

    int n,e;
    cin>>n>>e;
    int u,v,w;
    for(int i=0;i<e;i++){
        cin>>u>>v>>w;

        adj[u].push_back({v,w});
        //adj[v].push_back({u,w}); jodi undirected graph hoito

    }
    int source,dest;
    cin>>source>>dest;
    dijkstra(source);
    cout<<"cost "<<cost[dest]<<endl;

    //to find path

    vector<int>path;
    int now=dest;
    path.push_back(now);
    while(par[now]!=now){
        now=par[now];
        path.push_back(now);
    }

    reverse(path.begin(),path.end());
    cout<<"path is ";

    for(auto haha : path){
        cout<<haha<<" ";
    }




}
